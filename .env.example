# Spa Booking System Environment Variables
# Copy this file to .env.local and fill in your actual values

# Application URL (update for production)
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Server-only Supabase key (do not expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# GoHighLevel Integration (optional)
GHL_API_TOKEN=your-ghl-api-token
GHL_LOCATION_ID=your-ghl-location-id
GHL_WEBHOOK_URL=https://services.leadconnectorhq.com/hooks/your-webhook-id
GHL_WEBHOOK_SECRET=your-webhook-secret

# FastPayDirect Payment Integration
NEXT_PUBLIC_FASTPAYDIRECT_URL=https://invoice.fastpaydirect.com/spa-treatment-deposit
FASTPAYDIRECT_WEBHOOK_SECRET=your-payment-webhook-secret

# Email Configuration (optional, for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Development/Production Settings
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Admin Dashboard Settings
NEXT_PUBLIC_ADMIN_EMAIL=admin@dermalskin.com
ADMIN_PASSWORD=your-secure-password-here

# Booking Configuration
NEXT_PUBLIC_MAX_ADVANCE_BOOKING_DAYS=30
NEXT_PUBLIC_BOOKING_BUFFER_MINUTES=15

# Business Hours (24-hour format)
NEXT_PUBLIC_BUSINESS_HOURS_START=09:00
NEXT_PUBLIC_BUSINESS_HOURS_END=18:00

# Cron Job Security (for Vercel Cron)
CRON_SECRET=your-secure-cron-secret-here